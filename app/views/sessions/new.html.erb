<h1>Login</h1>
  <div class ="row">
    <div class="col-sm-6"> 
    
    <%= form_for :sessions, url: '/login' do |form| %>
      <div class="form-group"> 
        <%= form.label :Email %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group"> 
        <%= form.label :Password %>
        <%= form.password_field :password, class: "form-control" %>
      </div> 
      
      <%= form.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


